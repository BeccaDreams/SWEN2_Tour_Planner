<Window x:Class="Tour_Planner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tour_Planner.Views"
        xmlns:mvvm="clr-namespace:Tour_Planner.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Window.DataContext>
        <mvvm:MainViewModel/>
    </Window.DataContext> 

    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <DockPanel Background="LightGray" Grid.Row="0" Grid.ColumnSpan="4">
            <Label  DockPanel.Dock="Top" Content="Tour Planner" HorizontalAlignment="Center"></Label>
            <Border BorderBrush="Black" BorderThickness="0.5"></Border>
        </DockPanel>

        <DockPanel Background="Beige" Grid.ColumnSpan="5" Grid.Row="1">
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem Header="_New"></MenuItem>
                    <MenuItem Header="_New"></MenuItem>
                    <MenuItem Header="_New"></MenuItem>
                </MenuItem>
                <MenuItem Header="Edit">
                    <MenuItem Header="_New"></MenuItem>
                    <MenuItem Header="_New"></MenuItem>
                    <MenuItem Header="_New"></MenuItem>
                </MenuItem>
                <MenuItem Header="Options">
                    <MenuItem Header="_New"></MenuItem>
                    <MenuItem Header="_New"></MenuItem>
                    <MenuItem Header="_New"></MenuItem>
                </MenuItem>
                <MenuItem Header="Help" >
                    <MenuItem Header="_New"></MenuItem>
                    <MenuItem Header="_New"></MenuItem>
                    <MenuItem Header="_New"></MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>

        
        <!-- SearchBar -->
        <DockPanel Grid.Row="2" Grid.ColumnSpan="3">
            <local:SearchBarView x:Name="SearchBar" DockPanel.Dock="Right"/>
            
        </DockPanel>
      
        <!-- TourList -->
        <local:TourListView x:Name="TourList" Grid.Row="3" Grid.RowSpan="5" Grid.Column="0" />

        <GridSplitter Grid.Column="1" Grid.Row="2" VerticalAlignment="Stretch"/>

        <!-- TourDetails -->
        <local:TourDetailsView x:Name="TourDetails" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2"/>
        
        <!-- TourLogs -->
        <DockPanel Grid.Row="4" Grid.Column="2">
            <local:TourLogsView DockPanel.Dock="Right" x:Name="TourLogs" />
            
        </DockPanel>
       
        
    </Grid>
    
</Window>

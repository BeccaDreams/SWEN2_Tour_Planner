<UserControl x:Class="Tour_Planner.Views.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Tour_Planner.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <TextBox Grid.Row="0" HorizontalAlignment="Left"  Width="350" Text="{Binding SearchText}"></TextBox>
        <Button x:Name="ButtonClick" Grid.Row="0" HorizontalAlignment="Right" Width="50" Click="ButtonClick_Clicked">Search</Button>


    </Grid>
</UserControl>
